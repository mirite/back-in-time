{
  "name": "site-archive",
  "version": "2.1.27",
  "description": "Website capture tool written in TS using Puppeteer",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src/**/* --fix",
    "format": "prettier --write ./src/**/*",
    "test": "yarn build && node ./dist/test.js https://rootree.ca",
    "release": "yarn build && yarn npm publish"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirite/site-archive.git"
  },
  "author": "Jesse Conner <me@jesseconner.ca>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "bufferutil": "^4.0.8",
    "html-urls": "^2.4.55",
    "jsdom": "^23.0.1",
    "node-gyp-install": "^2.2.0",
    "puppeteer": "^21.6.1",
    "re2": "^1.20.9",
    "tar": "^6.2.0",
    "typescript": "^5.3.3",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/tar": "^6.1.10",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "packageManager": "yarn@4.0.2"
}
